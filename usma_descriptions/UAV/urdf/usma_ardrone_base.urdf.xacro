<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:property name="X_ROBOT_NAMESPACE" value="/gazebo/uav" />
  <xacro:include filename="$(find usma_plugins)/urdf/usma_ardrone_plugins.urdf.xacro" />

  <xacro:macro name="usma_ardrone_base_macro">
  	<link name="${X_ROBOT_NAMESPACE}/ardrone_base_footprint"/>
  	<joint name="base_joint" type="fixed">
  		<origin xyz="0 0 0.0102" rpy="0 0 0" />
  		<parent link="${X_ROBOT_NAMESPACE}/ardrone_base_footprint"/>
  		<child link="${X_ROBOT_NAMESPACE}/ardrone_base_link" />
  	</joint>

    <link name="${X_ROBOT_NAMESPACE}/ardrone_base_link">
      <inertial>
        <mass value="1.477" />
        <origin xyz="0 0 0" />
        <inertia ixx="0.01152" ixy="0.0" ixz="0.0" iyy="0.01152" iyz="0.0" izz="0.0218" />
      </inertial>

      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://usma_descriptions/UAV/meshes/ardrone_4.dae"/>
        </geometry>
      </visual>

      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="package://usma_descriptions/UAV/meshes/ardrone_4.stl"/>
        </geometry>
      </collision>
    </link>

	<gazebo reference="${X_ROBOT_NAMESPACE}/ardrone_base_link">
		<turnGravityOff>false</turnGravityOff>
	</gazebo>
 
    <!-- Gazebo Plugins -->
    <usma_ardrone_plugins/>
  </xacro:macro>
</robot>
